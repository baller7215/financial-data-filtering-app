{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
            "distDir": "build"
            }
        },
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/build/$1"
        }
    ]
  }